<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory>
        <Preference
            android:key="prefs_key_home_gesture"
            android:title="@string/home_gesture"
            android:fragment="com.sevtinge.hyperceiler.ui.sub.home.HomeGestureSettings" />

        <Preference
            android:key="prefs_key_home_layout"
            android:title="@string/home_layout"
            android:fragment="com.sevtinge.hyperceiler.ui.sub.home.HomeLayoutSettings" />

        <Preference
            android:key="prefs_key_home_folder"
            android:title="@string/home_folder"
            android:fragment="com.sevtinge.hyperceiler.ui.sub.home.HomeFolderSettings" />

        <Preference
            android:key="prefs_key_home_drawer"
            android:title="@string/home_drawer"
            android:fragment="com.sevtinge.hyperceiler.ui.sub.home.HomeDrawerSettings" />

        <Preference
            android:key="prefs_key_home_title"
            android:title="@string/home_title"
            android:fragment="com.sevtinge.hyperceiler.ui.sub.home.HomeTitleSettings" />

        <Preference
            android:key="prefs_key_home_recent"
            android:title="@string/home_recent"
            android:fragment="com.sevtinge.hyperceiler.ui.sub.home.HomeRecentSettings" />

        <Preference
            android:key="prefs_key_home_widget"
            android:title="@string/home_widget"
            android:fragment="com.sevtinge.hyperceiler.ui.sub.home.HomeWidgetSettings" />

        <Preference
            android:key="prefs_key_home_dock"
            android:title="@string/home_dock"
            android:fragment="com.sevtinge.hyperceiler.ui.sub.home.HomeDockSettings" />

        <Preference
            android:key="prefs_key_home_other"
            android:title="@string/home_other"
            android:fragment="com.sevtinge.hyperceiler.ui.sub.home.HomeOtherSettings" />

    </PreferenceCategory>

    <PreferenceCategory>
        <DropDownPreference
            android:defaultValue="6"
            android:key="prefs_key_home_recent_blur_level"
            android:title="@string/home_recent_blur_level"
            app:entries="@array/home_recent_blur"
            app:entryValues="@array/home_recent_blur_value" />

    </PreferenceCategory>

</PreferenceScreen>