<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:splitMotionEvents="false">

    <fan.nestedheader.widget.NestedHeaderLayout
        android:id="@+id/nested_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerView="@id/app_search_view"
        app:scrollableView="@id/viewpager">

        <include
            android:id="@+id/app_search_view"
            layout="@layout/miuix_appcompat_search_stub" />

        <com.sevtinge.hyperceiler.ui.page.DraggableViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </fan.nestedheader.widget.NestedHeaderLayout>

</FrameLayout>
