<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fan.nestedheader.widget.NestedHeaderLayout
        android:id="@+id/nested_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headerView="@id/search_view"
        app:scrollableView="@id/scrollable_view_drawer">

        <include
            android:id="@+id/search_view"
            layout="@layout/miuix_appcompat_search_stub" />

        <fan.springback.view.SpringBackLayout
            android:id="@+id/scrollable_view_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:scrollOrientation="horizontal|angle"
            app:scrollableView="@id/frame_page">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/frame_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </fan.springback.view.SpringBackLayout>

    </fan.nestedheader.widget.NestedHeaderLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/navigation_divider" />

        <RadioGroup
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            android:checkedButton="@id/navigation_home"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/navigation_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_navigation_home"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="@string/home"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/navigation_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_navigation_settings"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="@string/settings"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/navigation_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_navigation_about"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="@string/about"
                android:textSize="12sp" />

        </RadioGroup>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_result_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/miuix_appcompat_searchbar_result_margin_top"
        android:background="?android:attr/windowBackground"
        android:clipToPadding="false"
        android:visibility="gone" />

</FrameLayout>